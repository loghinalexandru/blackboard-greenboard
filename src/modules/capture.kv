#:kivy 2.0.0

<CaptureScreen>:
    name: 'capture'
    BoxLayout:
        orientation: 'vertical'
        Camera:
            id: camera
            resolution: (self.width, self.height)
            play: True
            allow_stretch: True
        Button:
            text: 'Capture'
            size_hint_y: None
            height: '48dp'
            on_press: root.capture()