#:kivy 2.0.0
#:import xcamera kivy_garden.xcamera.xcamera
#:import CaptureScreen libs.capturescreen

<CaptureScreen>:
    name: 'capture'
    md_bg_color: 0, 0, 0, 1
    Camera:
        id: camera
        resolution: root.camera_resolution
        play: True

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: [0, 0, 0, 20]
        MDIconButton:
            icon: "camera"
            on_release: root.on_picture_taken()
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x": .5, "center_y": .5}