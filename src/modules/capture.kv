#:kivy 2.0.0
#:import xcamera kivy_garden.xcamera.xcamera
#:import CaptureScreen libs.capturescreen

<CaptureScreen>:
    name: 'capture'
    md_bg_color: 0, 0, 0, 1
    Camera:
        id: camera
        resolution: (1920, 1080)
        allow_stretch: True
        canvas.before:
            PushMatrix
            Rotate:
                angle: -90
                origin: self.center
        canvas.after:
            PopMatrix
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        padding: [0, 0, 0, 20]
        MDIconButton:
            icon: "camera"
            on_release: root.on_picture_taken()
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x": .5, "center_y": .5}